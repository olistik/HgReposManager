<% semantic_form_for @project do |form| %>
  <% form.inputs do -%>
    <% if form.object.new_record? -%>
      <%= form.input :name %>
      <%= form.input :framework, :as => :select, :collection => Project::FRAMEWORKS %>
    <% end -%>
    <%= form.input :users, :as => :check_boxes %>
  <% end -%>
  <%= form.buttons %>
<% end -%>
